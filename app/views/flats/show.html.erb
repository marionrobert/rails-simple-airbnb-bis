<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1519643381401-22c77e60520e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2073&q=80);">
  <div class="container">
    <h1><%= @flat.name%></h1>
  </div>
</div>

<div class="container">

  <div class="row mt-5 d-flex justify-content-around">
    <div class="col-8 mb-5">
      <h5><%= @flat.description %></h5>
      <p class="mt-3"><i class="fa-solid fa-location-dot"></i> <%= @flat.address %></p>
      <p>Price per night: <%= @flat.price_per_night %> â‚¬</p>
      <p>Number of guests: <%= @flat.number_of_guests %> <i class="fa-solid fa-users"></i></p>
    </div>
    <div class="col-3 d-flex justify-content-around">
      <div>
        <%= link_to edit_flat_path(@flat), class: "link-edit", data: { method: :edit } do%>
          <i class="fa-regular fa-pen-to-square"></i>
        <% end %>
        <%= link_to "Edit my flat", edit_flat_path(@flat), data: { method: :edit }, class: "link-edit"  %>
      </div>
      <div>
        <%= link_to flat_path(@flat), class: "link-edit",
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  do%>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
        <%= link_to "Delete my flat", flat_path(@flat), data: { method: :delete }, class: "link-edit"  %>
      </div>
    </div>
  </div>
</div>
